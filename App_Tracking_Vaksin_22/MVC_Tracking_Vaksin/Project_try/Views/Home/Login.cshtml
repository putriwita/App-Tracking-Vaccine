@model Project_try.Models.Users

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
              <div class="login-box p-4 border border-primary rounded">
            <img src="https://seremonia.id/wp-content/uploads/2018/11/logo-bpom.png" height="20%" width="20%" class="img-fluid mx-auto d-block mb-4" alt="Logo">
            <h2 class="text-center mb-4">Login</h2>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "text-center" }))
                {
                @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(u => u.username ,new{ @class ="text-left control-label"})
                    @Html.TextBoxFor(u => u.username, new { @class = "form-control text-left" })
                    @Html.ValidationMessageFor(u => u.username)
                    </div>
                    <div class="form-group">
                    @Html.LabelFor(u => u.password , new{ @class ="text-left control-label"})
                    @Html.PasswordFor(u => u.password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.password)
                    </div>
                    <br />
                        <button type="submit" class="btn btn-primary">Login</button>
                }
            </div>
        </div>
    </div>
</div>

